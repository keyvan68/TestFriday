@using App.Domain.Core.Entities;
@model IEnumerable<Product>

@{
    ViewData["Title"] = "لیست محصول فروشنده";
   
}
<h1>محصولات</h1>
<a class="btn btn-info text-white" asp-controller="Product" asp-action="Create" >اضافه کردن</a>

<table class="table table-striped table-bordered border-1">
    <thead>
        <tr class="bg-info text-white">
            <th>
                نام محصول
            </th>

            <th>
                قیمت
            </th>
            <th>
                تعداد محصول
            </th>


            <th> عملیات</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>


                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberofProducts)
                </td>

                <td>
                    <div class="btn-group" role="group" aria-label="Button Group">
                        <a class="btn btn-info text-white" asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id">ویرایش</a>
                        <a class="btn btn-danger text-white" asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id">حذف</a>
                       
                    </div>
                </td>
            </tr>
        }
    </tbody>

</table>